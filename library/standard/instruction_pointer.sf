;;;
;;; Sets the expected value of the instruction pointer to a new value
;;;
(def set_ip 
    (fun (new_ip) 
        (set_bit_pos (* new_ip 8))
    )
)

;;;
;;; Retrieves the current instruction pointer value
;;;
(def ip
    (/ (bit_pos) 8)
)

;;;
;;; Default label value mapping function
;;;
(def label_value 
    (fun (cur_bit_pos) 
        (/ cur_bit_pos 8)
    )
)

(export label_value)
(export set_ip)
(export ip)
